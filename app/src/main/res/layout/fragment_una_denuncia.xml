<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_itemDenuncia"
    tools:context=".Fragment_unaDenuncia"
    android:background="@drawable/side_nav_bar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/esquinas_redondeadas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10sp">



            <ImageView
                android:id="@+id/imageView_foto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Ubicacion:"
                android:layout_marginLeft="10sp"
                android:textColorHint="@color/colorHint">
            </com.google.android.material.textview.MaterialTextView>


            <org.osmdroid.views.MapView
                android:id="@+id/mapItem"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Denuncia:"
                android:layout_marginLeft="10sp"
                android:textSize="16sp"
                android:textColorHint="@color/colorHint">
            </com.google.android.material.textview.MaterialTextView>
            <TextView
                android:id="@+id/textView_denuncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:textSize="18sp"
                android:textStyle="normal" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dominio:"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:textColorHint="@color/colorHint">
            </com.google.android.material.textview.MaterialTextView>
            <TextView
                android:id="@+id/textView_dominio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:textSize="18sp"
                android:textStyle="normal"/>



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/MaterialTextView_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado:"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:textColorHint="@color/colorHint">
            </com.google.android.material.textview.MaterialTextView>
            <TextView
                android:id="@+id/textView_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:textSize="18sp"
                android:textStyle="normal"/>



            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha:"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:textColorHint="@color/colorHint">
            </com.google.android.material.textview.MaterialTextView>
            <TextView
                android:id="@+id/textView_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>